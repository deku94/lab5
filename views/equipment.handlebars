<!doctype html>

<html>
    <head>
        <title>My Equipment</title>	
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <script src="/js/jquery-1.11.0.js" type="text/javascript"></script>
        <script src="/js/bootstrap.js" type="text/javascript"></script>
        <script src="/js/hci-friends.js" type="text/javascript"></script>
        <link rel="stylesheet" href="css/hci-friends.css">
        <link rel="stylesheet" href="css/bootstrap.css">
        <link rel="stylesheet" href="css/bootstrap-theme.css">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->      
    </head>


    <body>
        {{> navbarsPartials}}
        <div class = "container" >	
            {{#each equipment}}


            <div class="row row-bottom-margin listing" style = "margin-bottom: 0px; background-color: #151515;
            background-size: 100% auto ;
            padding-bottom: 0px;">
                <div class="col-xs-8" style = "max-height: 125px">
                    <div style = "padding-top: 2%; padding-bottom: 15%" >
                    <i class="fa fa-headphones fa-2x whiteicon"></i>
                    <span class = "box-title"> {{name}}
                    <p class = "box-subtitle">{{type}} - {{usage}} </p></span>

                    </div>
                    <i id="dir" class="fa fa-sort-desc fa-2x whiteicon" style="float:right;margin-right:4%"></i>
                </div>
                <div class='row row-bottom-margin' id='{{name}}'  style = 'margin-bottom: 0px; background-color:#333333; background-size: 100% auto ; padding-bottom: 0px;overflow:hidden;display:none'>  
                    <div class="" style = "">
                      <div style = "padding-top: 2%; padding-bottom: 15%" > <!--Changed padding top to 2 and paddint bottom to 15-->
                        <i class="fa fa-{{type}} fa-2x whiteicon"></i>
                        <span style = "margin-left: 10px; padding-bottom: 0px; padding-bottom: 0px; margin-bottom: 0px; text-align:center; font-size: 25px; color: #ffffff; font-family: Verdana;"> Environment for {{name}}
                         <p style = "text-align: left; padding-top: 0px; margin-top: 0px; font-size: 10px"></p></span>
                       
                      
                      </div>
                    </div>

                </div>
            {{/each}}
            <a href="/addEquip">
                <div class="row row-bottom-margin" style = "margin-bottom: 0px;margin-top:3%; background-color: #151515;
                background-size: 100% auto ;
                padding-bottom: 0px;">
                    <center><i class="fa fa-plus fa-3x whiteicon"></i></center>
                    
                </div>
            </a>  	
        </div>
    </body>
    <script type="text/javascript">
    $("#equipment-nav").addClass("active");
    $("nav div.container-fluid div.navbar-header").append("<a class='navbar-brand' style = 'font-family: Arial' href='#'>Equipment</a>");
    </script>
    <script src="/js/JSEquipment.js" type="text/javascript"></script>

</html>
