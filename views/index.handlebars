<!doctype html>

<html style="height: 100%; overflow-y:hidden">
    <head>
        <title>Home</title> 
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width; height=device-height; initial-scale=1.0; user-scalable=no">


        <script src="/js/jquery-1.11.0.js" type="text/javascript"></script>
        <script src="/js/bootstrap.js" type="text/javascript"></script>
        <script src="/js/index.js" type="text/javascript"></script>
        <script src="/js/overlay.js" type="text/javascript"></script>
        <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700|Roboto:400,300‌​,700,500,100' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="css/bootstrap.css">
        <link rel="stylesheet" href="css/bootstrap-theme.css">
        <link rel="stylesheet" href="css/hci-friends.css">
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->        
    </head>
    <body style="background-color:#3f3f3f; height:100%">
        <div style="border: 0px; background-image: linear-gradient(to bottom, #3f3f3f 100%, #3f3f3f 100%); margin-bottom: 0px; height: 55px">
            <div class="navbar-brand">
                <img src="crescendo.png" style="max-height: 25px; width: auto" alt="img">
            </div>
        </div>
        <div style="height:calc(100% - 95px)" class="container">
            
            <!-- Code for Tutorial overlay -->
            <div id="overlay-inAbox" class="overlay" style="display: none; width: 75%; top: 50px; opacity: 1;">

                <div class="container">
                    <br>
                    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
                        <!-- Indicators -->

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <div class = "container" style = "margin-right: 35px; margin-left: 35px">
                                    <div class = "row text-center">
                                        <img src = "http://icons.iconarchive.com/icons/svengraph/i-love/512/Headphones-icon.png" class = "carousel-image" alt = "headphones"></img>
                                        <h3 style = "color: #000; text-align:center">add your equipment</h3>
                                        <p style = "color: #000; text-align:left;padding-bottom:25px"> add your own headphones and speakers by going to "My Equipment"</p>
                                    </div>
                                </div>
                            </div>

                            <div class="item">
                                <div class = "container" style = "margin-right: 35px; margin-left: 35px">
                                    <div class = "row text-center">
                                        <img src = "http://icons.iconseeker.com/png/fullsize/be-dj/turntable.png" class = "carousel-image" alt = "headphones"></img>
                                        <h3 style = "color: #000; text-align:center">entering the sound test</h3>
                                        <p style = "color: #000; text-align:left;padding-bottom:25px"> enter the sound testing page by pressing "Start Sound Test" </p>
                                    </div>
                                </div>
                            </div>

                            <div class="item">
                                <div class = "container" style = "margin-right: 35px; margin-left: 35px">
                                    <div class = "row text-center">
                                        <img src = "speaker.png" class = "carousel-image" alt = "headphones"></img>
                                        <h3 style = "color: #000; text-align:center">starting the sound test</h3>
                                        <p style = "color: #000; text-align:left; padding-bottom:25px"> press the "Test Noise Level" on the testing page to begin the test for 7.5 seconds </p>
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class = "container" style = "margin-right: 35px; margin-left: 35px">
                                    <div class = "row text-center">
                                        <img src = "http://icons.iconarchive.com/icons/artua/mac/512/Home-icon.png" class="carousel-image" alt = "headphones"></img>
                                        <h3 style = "color: #000; text-align:center">add new environment</h3>
                                        <p style = "color: #000; text-align:left; padding-bottom: 25px"> press "Save to Environment" and enter the details of your environment in the next screen </p>
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class = "container" style = "margin-right: 35px; margin-left: 35px">
                                    <div class = "row text-center">
                                        <img src = "http://icons.iconarchive.com/icons/aha-soft/standard-city/256/university-icon.png" class = "carousel-image" alt = "headphones"></img>
                                        <h3 style = "color: #000; text-align:center">view your environment</h3>
                                        <p style = "color: #000; text-align:left;padding-bottom: 25px"> you can view your saved environments by press "View Environments" on the home screen</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class = "row text-center">
                        <span class = "btn btn-default" style = "margin-bottom: 25px" onclick="closeOverlay()">Close</span>
                    </div>
                </div>
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left whiteicon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right whiteicon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <!-- Sound Test tile -->
            <div id="soundtest" class="row row-partition-3-bottom-margin soundtest " >
                <div  class="col-xs-12 text-center full">
                    <div class="tile-content">
                        <h1 style="margin-top:0%" class="index-center-title">Sound Test</h1>
                        <p class="index-center-subtitle">test your soundscape.</p>
                        <span onclick = "openOverlay('#overlay-inAbox')" id="overlaylaunch-inAbox" class = "btn btn-primary">Tutorial</span>

                        <a style="padding: 5px; margin-bottom: 20px; margin-top: 10px; text-align: center; margin: auto;" class="btn btn-info" href="/soundtest">Start Sound Test</a>
                    </div>
                </div>
            </div>
            
            <!-- My Equipment and My Environment tiles -->
            <div style="background-color:#3f3f3f" class="row row-partition-3-bottom-margin">
                <a href="/equipment">
                    <div id = "equipment" class="col-xs-6 text-center equipment full changeable-hide">
                        <div class="tile-content">
                            <img src = "headphones.png" alt = "headphones" class="tile-image"></img>
                            <h1 class="minibox-title">My Equipment</h1>

                            <!--  <a class="btn btn-info minibox-btn" href="/equipment">View Equipment</a> -->

                        </div>
                    </div>
                </a>
                <a href="/environment">
                    <div id = "environments" class="col-xs-6 text-center environment full changeable-hide">
                        <div class="tile-content">
                            <img src = "home.png" alt = "place" class="tile-image"></img>
                            <h1 class="minibox-title">My Environments</h1>
                            <!--  <a class="btn btn-info minibox-btn" href="/environment">View Environments</a> -->
                        </div>
                    </div>
                </a>
            </div>
            <!-- Community Tile -->
            <div id = "community" class="row row-partition-3 community changeable-hide">
                <a href="/community">
                    <div  class="col-xs-12 text-center full">
                        <div class="tile-content">
                            <img src = "people.png" alt = "people" class="tile-image"></img>
                            <h1 class="minibox-title">Community</h1>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div style="border: 0px; background-image: linear-gradient(to bottom, #3f3f3f 100%, #3f3f3f 100%); margin-bottom: 0px; margin-top: 0px; height: 40px">
            <div id="help" style="float: left; padding-left: 5%; top:15%; position:relative;">
                <a href="/help" style = "text-decoration:none; color: #fff">Need Help?</a>
            </div>
            <div id="about" style="float: right; padding-right: 5%; top:15%; position:relative;">
                <a href="/about" style = "text-decoration:none; color: #fff">About Crescendo</a>
            </div>
        </div>
    </body>
</html>