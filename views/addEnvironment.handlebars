<!doctype html>

<html>
<head>
	<title>My HCI Friends</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	
	<script src="/js/jquery-1.11.0.js" type="text/javascript"></script>
	<script src="/js/bootstrap.js" type="text/javascript"></script>
	<script src="/js/hci-friends.js" type="text/javascript"></script>
	<link rel="stylesheet" href="css/hci-friends.css">
	<link rel="stylesheet" href="css/bootstrap.css">
	<link rel="stylesheet" href="css/bootstrap-theme.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
	
	<style type="text/css">
		.whiteicon {color:white;}
	</style>

	<script type="text/javascript">
	    function updateTextInput(val) {
	      document.getElementById('displaypoints').value=val; 
	    }

  	</script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	{{> navbarsPartials}}
	
	<div class = "container">
		<a href="/environment">
			<div class="row row-bottom-margin" style = "margin-bottom: 0px;margin-top:3%; background-color: #151515;
				  background-size: 100% auto ;
				  padding-bottom: 0px;">
		    <div class="col-xs-8" style = "max-height: 125px">
		      <div style = "padding-top: 2%; padding-bottom: 15%" > <!--Changed padding top to 2 and paddint bottom to 15-->
		        <i class="fa fa-arrow-left fa-2x whiteicon"></i>
		        <span style = "margin-left: 10px; padding-bottom: 0px; padding-bottom: 0px; margin-bottom: 0px; text-align:center; font-size: 25px; color: #ffffff; font-family: Verdana"> BACK TO ENVIRONMENTS
		         <p style = "text-align: left; padding-top: 0px; margin-top: 0px; font-size: 10px">Going Back </p></span>
		       
		      
		      </div>
		    </div>
		  </div>
		</a>

		<div class="row row-bottom-margin" style = "margin-bottom: 0px;margin-top:3%; background-color: #151515;
				  background-size: 100% auto ;
				  padding-bottom: 0px;">
		    <div class="" style = "">
		      <div style = "padding-top: 2%; padding-bottom: 15%" > <!--Changed padding top to 2 and paddint bottom to 15-->
		        <span style = "margin-left: 10px; padding-bottom: 0px; padding-bottom: 0px; margin-bottom: 0px; text-align:center; font-size: 25px; color: #ffffff; font-family: Verdana"> NEW ENVIRONMENTS<br>
		        </span>
		        <br>
	        
			      <form style = "margin-left: 10px; padding-bottom: 0px; padding-bottom: 0px; margin-bottom: 0px; text-align:left; font-size: 25px; color: #ffffff; font-family: Verdana" id="addingEnv" action="/addingEnv">
		      	
				    	<label style="width:auto;" for="name"> Name of Environment </label>
				    	<textarea style="width:70%; height:30px; overflow:hidden" id="name" name="name"></textarea>
			    	
			    		<br>
			    		<label for="equip">Select Gear</label>
				    	<select name="equip" id="equip" data-native-menu="false">
				    		<option value="" disabled selected>Select your option</option>
				    		{{#each equipment}}
			          		<option value={{name}}>{{name}}</option>
							{{/each}}
				        </select>
				      
				      	<br>
			      		<!-- IMPLEMENT SOUND TESTER INSTEAD-->
				      	<label for="points">HOW LOUD IS YOUR ENVIRONMENT?</label>
				      	<i class="fa fa-volume-down"></i>
				      	<input style="width:50%" type="range" name="points" id="points" value="50" min="0" max="100" data-highlight="true" onchange="updateTextInput(this.value);">
				      	<i class="fa fa-volume-up"></i>
				      	<input style="width:15%" type="text" id="displaypoints" value="">
				      	<br>
				    	<label style="width:auto;" for="place"> Type of Place </label>


				    	<select id="place" name="place">
				    		{{#each places}}
			          		<option value={{location}}>{{location}}</option>
							{{/each}}
				    		
				    	</select>
				    	<br>
				    	
				    	
						<input type="submit" class="btn btn-default"  value="ADD ENVIRONMENT">

				  	</form>
		      	
		      </div>
		      
		    </div>
			    
		  </div>
	</div>
</body>
<script type="text/javascript">
	$("nav div div:nth-child(2) ul li:nth-child(3)").addClass("active");
	$("nav div.container-fluid div.navbar-header").append("<a class='navbar-brand' style = 'font-family: Arial' href='#'>Environment</a>");
</script>
</html>
