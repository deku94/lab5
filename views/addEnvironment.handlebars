<body>
	<nav class="navbar navbar-inverse" style = "background-image: linear-gradient(to bottom, #3f3f3f 100%, #3f3f3f 100%); margin-bottom: 0px">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>                        
	      </button>
	      <a class="navbar-brand" style = "font-family: Arial" href="#">My Environments</a>
	    </div>
	    <div class="collapse navbar-collapse" id="myNavbar">
	      <ul class="nav navbar-nav">
	        <li ><a href="/">Home</a></li>
	        <li><a href="#">Sound Test</a></li>
	        <li class="active"><a href="#">My Environments</a></li>
	        <li ><a href="/equipment">My Equipment</a></li>
	        <li><a href="#">Community</a></li>
	        <li><a href="#">About Us</a></li>
	      </ul>
	      <ul class="nav navbar-nav navbar-right">
	        <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
	        <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
	      </ul>
	    </div>
	  </div>
	</nav>
	<div class = "container">
		<a href="/environment">
			<div class="row row-bottom-margin" style = "margin-bottom: 0px;margin-top:3%; background-color: #151515;
				  background-size: 100% auto ;
				  padding-bottom: 0px;">
		    <div class="col-xs-8" style = "max-height: 125px">
		      <div style = "padding-top: 2%; padding-bottom: 15%" > <!--Changed padding top to 2 and paddint bottom to 15-->
		        <i class="fa fa-arrow-left fa-2x whiteicon"></i>
		        <span style = "margin-left: 10px; padding-bottom: 0px; padding-bottom: 0px; margin-bottom: 0px; text-align:center; font-size: 25px; color: #ffffff; font-family: Verdana"> BACK TO ENVIRONMENTS
		         <p style = "text-align: left; padding-top: 0px; margin-top: 0px; font-size: 10px">Going Back </p></span>
		       
		      
		      </div>
		    </div>
		  </div>
		</a>

		<div class="row row-bottom-margin" style = "margin-bottom: 0px;margin-top:3%; background-color: #151515;
				  background-size: 100% auto ;
				  padding-bottom: 0px;">
		    <div class="" style = "">
		      <div style = "padding-top: 2%; padding-bottom: 15%" > <!--Changed padding top to 2 and paddint bottom to 15-->
		        <span style = "margin-left: 10px; padding-bottom: 0px; padding-bottom: 0px; margin-bottom: 0px; text-align:center; font-size: 25px; color: #ffffff; font-family: Verdana"> NEW ENVIRONMENTS<br>
		        </span>
		        <br>
	        
			      <form style = "margin-left: 10px; padding-bottom: 0px; padding-bottom: 0px; margin-bottom: 0px; text-align:left; font-size: 25px; color: #ffffff; font-family: Verdana" id="addingEnv" action="/addingEnv">
		      	
				    	<label style="width:auto;" for="name"> Name of Environment </label>
				    	<textarea style="width:70%; height:30px; overflow:hidden" id="name" name="name"></textarea>
			    	
			    		<br>
			    		<label for="equip">Select Gear</label>
				    	<select name="equip" id="equip" data-native-menu="false">
				    		<option value="" disabled selected>Select your option</option>
				    		{{#each equipment}}
			          		<option value={{name}}>{{name}}</option>
								{{/each}}
				        </select>
				      
				      	<br>
			      
				      	<label for="points">NOISE LEVEL</label>
				      	<i class="fa fa-volume-down"></i>
				      	<input style="width:68%" type="range" name="points" id="points" value="50" min="0" max="100" data-highlight="true" onchange="updateTextInput(this.value);">
				      	<i class="fa fa-volume-up"></i>
				      	<input style="width:5%" type="text" id="displaypoints" value="">
				      	<br>
				    	<label style="width:auto;" for="place"> Type of Place </label>
				    	<select id="place" name="place">
				    		<option value="home">Home</option>
				    		<option value="bus">Bus</option>
				    		<option value="university">University</option>
				    	</select>
				    	<br>
				    	
				    	
						<input type="submit" class="btn btn-default"  value="ADD ENVIRONMENT">

				  	</form>
		      	
		      </div>
		      
		    </div>
			    
		  </div>
	</div>
