<!doctype html>
<html>
	<head>
        <title>Sound Test</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <script src="/js/jquery-1.11.0.js" type="text/javascript"></script>
        <script src="/js/bootstrap.js" type="text/javascript"></script>
	    <script src="/js/volume-meter.js" type="text/javascript"></script>
        {{> googleAnalytics}}
        {{> timeExperiment}}
        <script src="/js/soundtest_page.js" type="text/javascript"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="css/bootstrap.css">
        <link rel="stylesheet" href="css/bootstrap-theme.css">
        <link rel="stylesheet" href="css/hci-friends.css">
	</head>	
	<body>
        {{> navbarsPartials}}
		
		<div class="container">
            <div>
                <form id="environment"  action="/environment/pickEnv">
                    {{#if showAlternative}}
                        <h3>1. Select Your Environment</h3>
                        <p>Select 'New' if testing in a new environment</p>
                    {{else}}
                        <h4>Current Environment</h4>
                    {{/if}}
                    <select name="environment">
                        <option value='New'>New</option>
                        {{#each environment}}
                            <option value='{{name}}'>{{name}}</option>
                        {{/each}}
                    </select>
                    {{#if showAlternative}}
                        <div style="padding-top: 2%">
                            <h3>2. Test Your Environment</h3>
                            <p>Press "Start Test" to test the selected environment's noise level for 7.5 seconds and wait for results below</p>
                            <i class="fa fa-volume-up fa-5x"></i>
                            <button type="button" class="btn btn-primary btn-lg" id="sound-test" style="margin-left:5%; vertical-align:75%">Start Test</button>
                        </div>
                    {{else}}
                        <input id="submitBtn" type="submit" class="btn btn-primary btn-lg changeable-hide" id="save-results" value="Save to Environment"></input>
                        <div style="padding-top: 10%">
                            <i class="fa fa-volume-up fa-5x"></i>
                            <button type="button" class="btn btn-primary btn-lg" id="sound-test" style="margin-left:5%; vertical-align:75%">Test Noise Level</button>
                        </div>
                    {{/if}}
                    <div id="meter-div" hidden="hidden">
                        <canvas id="meter" width="500" height="50"></canvas>
                    </div>
                    <div id="test-result-div" hidden="hidden">
                        <h4>Results</h4>
                        <div id="test-details">
                        </div>
                        {{#if showAlternative}}
                            <input id="submitBtn" type="submit" class="changeable-hide btn btn-success btn-lg" id="save-results" value="Save to Environment"></input>
                        {{/if}}
                    </div>
                </form>
            </div>
            
         </div>
	</body>	
    <script type="text/javascript">
        $("#soundtest-nav").addClass("active");
        $("nav div.container-fluid div.navbar-header").append("<a class='navbar-brand' style = 'font-family: Arial' href='#'>Sound Test</a>");
    </script>
</html>